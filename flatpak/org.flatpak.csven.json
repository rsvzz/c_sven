{
  "id": "org.flatpak.csven",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "base-version": "0.0.3",
  "sdk": "org.gnome.Sdk",
  "command": "csven",
  "branch": "stable",
  "finish-args": [
      "--socket=session-bus",
      "--share=ipc",
      "--socket=wayland",
      "--socket=x11",
      "--socket=fallback-x11",
      "--device=dri",
      "--env=DISPLAY=:0",
    "--env=LD_LIBRARY_PATH=/app/lib"
  ],
  "modules": [
    {
      "name": "questk",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "file",
          "path": "/usr/local/lib/libquestk.so",
          "dest": "libquestk.so"
        },
        {
          "type": "dir",
          "path": "/usr/local/include",
          "dest": "include"
        },
        {
          "type":"file",
          "path":"../data/org.flatpak.csven.desktop",
          "dest":"csven"
        },
        {
          "type":"file",
          "path":"../data/org.flatpak.csven.png",
          "dest":"icon"
        }

      ],
      "build-commands": [
        "install -Dm755 csven/org.flatpak.csven.desktop /app/share/applications/org.flatpak.csven.desktop",
        "install -Dm644 icon/org.flatpak.csven.png /app/share/icons/hicolor/scalable/apps/org.flatpak.csven.png",
        "cp -r include /app/include",
        "install -Dm644 libquestk.so/libquestk.so /app/lib/libquestk.so"
      ]
    },
    {
      "name": "appgame",
      "buildsystem": "meson",
      "config-opts": [
        "--prefix=/app",
        "--buildtype=release",
        "--libdir=lib"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
       
      ],
      "build-options": {
        "env": {
          "LIBRARY_PATH": "/app/lib",
          "C_INCLUDE_PATH": "/app/include"
        }
      }
    }
  ]
}