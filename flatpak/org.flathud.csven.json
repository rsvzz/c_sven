{
  "id": "org.flathud.csven",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "base-version": "0.0.3",
  "sdk": "org.gnome.Sdk",
  "command": "csven",
  "branch": "stable",
  "finish-args": [
      "--socket=session-bus",
      "--share=ipc",
      "--socket=wayland",
      "--socket=x11",
      "--socket=fallback-x11",
      "--device=dri",
      "--env=DISPLAY=:0",
      "--env=GTK_THEME=Adwaita:dark",
      "--env=LD_LIBRARY_PATH=/app/lib"
  ],
  "modules": [
    {
      "name": "questk",
      "buildsystem": "meson",
      "config-opts": [
        "--prefix=/app",
        "--buildtype=release",
        "--libdir=lib"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/rsvzz/simple_str_list.git",
          "branch":"main"
        }
      ]
    },
    {
      "name": "cpfiles",
      "buildsystem": "simple",
      "sources": [
        {
          "type":"file",
          "path":"../data/org.flathud.csven.desktop",
          "dest":"csven"
        },
        {
          "type":"file",
          "path":"../data/org.flathud.csven.png",
          "dest":"icon"
        }

      ],
      "build-commands": [
        "install -Dm755 csven/org.flathud.csven.desktop /app/share/applications/org.flathud.csven.desktop",
        "install -Dm644 icon/org.flathud.csven.png /app/share/icons/hicolor/scalable/apps/org.flathud.csven.png"
      ]
    },
    {
      "name": "csven",
      "buildsystem": "meson",
      "config-opts": [
        "--prefix=/app",
        "--buildtype=release",
        "--libdir=lib"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
       
      ],
      "build-options": {
        "env": {
          "LIBRARY_PATH": "/app/lib",
          "C_INCLUDE_PATH": "/app/include"
        }
      }
    }
  ]
}