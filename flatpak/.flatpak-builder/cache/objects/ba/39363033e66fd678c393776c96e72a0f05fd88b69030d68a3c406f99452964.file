[Application]
name=org.flathud.csven
runtime=org.gnome.Platform/x86_64/47
sdk=org.gnome.Sdk/x86_64/47
command=csven

[Context]
shared=ipc;
sockets=x11;wayland;session-bus;fallback-x11;
devices=dri;

[Environment]
GTK_THEME=Adwaita:dark
LD_LIBRARY_PATH=/app/lib
DISPLAY=:0

[Extension org.flathud.csven.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=org.flathud.csven.Debug;